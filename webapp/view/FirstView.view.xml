<mvc:View controllerName="abhiMyFirstDemo.controller.FirstView" xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="true"
	xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core" xmlns:m="sap.m" xmlns:l="sap.ui.layout">
	<m:App>
		<m:pages>
			<m:Page title="Testing">
				<m:content>
					<Table rows="{oGridTableModel>/ProductCollection}" title="Products" selectionMode="MultiToggle" visibleRowCount="7"
						rowSelectionChange=".fnRowSelected">
						<columns>
							<Column width="15rem" hAlign="Center">
								<m:Label text="Product"/>
								<template>
									<m:Text text="{oGridTableModel>Name}"/>
								</template>
							</Column>
							<Column width="15rem" hAlign="Center">
								<m:Label text="Supplier"/>
								<template>
									<m:Input value="{oGridTableModel>ProductId}"/>
								</template>
							</Column>
							<Column width="15rem" hAlign="Center">
								<m:Label text="Dimensions"/>
								<template>
									<m:Label text="{oGridTableModel>Quantity}"/>
								</template>
							</Column>
							<Column width="15rem" hAlign="Center">
								<m:Label text="Weight"/>
								<template>
									<m:ObjectStatus text="{oGridTableModel>Status}"/>
								</template>
							</Column>
							<Column width="15rem" hAlign="Center">
								<m:Label text="Price"/>
								<template>
									<u:Currency value="{oGridTableModel>Price}" currency="{oGridTableModel>CurrencyCode}"/>
								</template>
							</Column>
						</columns>
					</Table>
					<l:Grid class="sapUiSmallMarginTop" hSpacing="2" defaultSpan="L6 M6 S10" id="idGridLayout">
						<l:content>
							<m:Input value="{oGridTableModel>Name}" />
							<m:Input value="{oGridTableModel>DimUnit}" />
							<m:Input value="{oGridTableModel>Status}" />
							<m:Input value="{oGridTableModel>Name}" /><m:Input value="{oGridTableModel>Name}" /><m:Input value="{oGridTableModel>Name}" /><m:Input value="{oGridTableModel>Name}" /><m:Input value="{oGridTableModel>Name}" /><m:Input value="{oGridTableModel>Name}" /><m:Input value="{oGridTableModel>Name}" />
							</l:content>
					</l:Grid>
					<m:Button type="Accept" text="Submit" press=".fMySubmitPress" width="100%"></m:Button>
					<m:Button type="Accept" text="Reset" press=".fMyResetPress" width="100%"></m:Button>
				</m:content>
			</m:Page>
		</m:pages>
	</m:App>
</mvc:View>